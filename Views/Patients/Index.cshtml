@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;
@model List<DoctorsOffice.Patient>;

<h1>Patients</h1>

@if (@Model.Count == 0)
{
  <h3>No patients have been added yet!</h3>
} 


@foreach (Patient patients in Model)
{
  <li>@Html.ActionLink($"{patients.Name}", "Details", new { id = patients.PatientId })</li>
  
}

<p>@Html.ActionLink("Add new patient", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>